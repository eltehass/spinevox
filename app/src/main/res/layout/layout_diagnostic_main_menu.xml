<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="88dp"
            android:layout_marginBottom="64dp"
            android:src="@drawable/ic_robot_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_scoliometr"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/shape_grey_borderless"
            android:text="Сколіометр"
            android:textAllCaps="false"
            android:textColor="@drawable/selector_text_black_grey" />

        <Button
            android:id="@+id/btn_ai"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/shape_grey_borderless"
            android:text="Штучний інтелект"
            android:textAllCaps="false"
            android:textColor="@drawable/selector_text_black_grey" />

        <Button
            android:id="@+id/btn_archive"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_grey_borderless"
            android:text="Архів"
            android:textAllCaps="false"
            android:textColor="@drawable/selector_text_black_grey" />

    </LinearLayout>

</layout>